<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MinistryActivity">

    <LinearLayout
        android:id="@+id/ministerSetLayout"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerChooseMinister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonConfirmMinister"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Confirm" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <LinearLayout
            android:id="@+id/textLayoutMinistry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMinistry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageView
                android:id="@+id/ministerPortrait"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/anon_person" />

            <TextView
                android:id="@+id/textMinister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>